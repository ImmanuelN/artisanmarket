# =================================
# ArtisanMarket Client Environment Variables
# =================================
# Copy this file to client/.env and update the values for your environment

# =================================
# API CONFIGURATION
# =================================
# Backend API URL
VITE_API_URL=http://localhost:5000/api

# Socket.IO server URL
VITE_SOCKET_URL=http://localhost:5000

# =================================
# PAYMENT CONFIGURATION
# =================================
# Stripe Publishable Key (safe to expose in client)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# =================================
# APPLICATION SETTINGS
# =================================
# Application environment
VITE_NODE_ENV=development

# Application name and version
VITE_APP_NAME=ArtisanMarket
VITE_APP_VERSION=1.0.0

# =================================
# CLOUDINARY CONFIGURATION
# =================================
# Cloudinary cloud name (safe to expose)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here

# Cloudinary upload preset for unsigned uploads
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_here

# =================================
# ANALYTICS CONFIGURATION
# =================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID
VITE_GTM_ID=GTM-XXXXXXX

# =================================
# SOCIAL MEDIA CONFIGURATION
# =================================
# Facebook App ID (safe to expose)
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Google Client ID for OAuth (safe to expose)
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# =================================
# MAP SERVICES (Optional)
# =================================
# Google Maps API Key (with domain restrictions)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =================================
# THIRD-PARTY SERVICES
# =================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# =================================
# FEATURE FLAGS
# =================================
# Enable/disable features
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=false

# =================================
# DEPLOYMENT SETTINGS
# =================================
# Base URL for the application (useful for subdirectory deployments)
VITE_BASE_URL=/

# CDN URL for static assets (optional)
VITE_CDN_URL=https://cdn.example.com

# =================================
# DEVELOPMENT SETTINGS
# =================================
# Enable development tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Mock API settings
VITE_USE_MOCK_API=false

# =================================
# NOTES
# =================================
# 1. All VITE_ prefixed variables are exposed to the client-side code
# 2. Never put sensitive information (API secrets, private keys) in client env vars
# 3. Only put values here that are safe to be publicly visible
# 4. Variables without VITE_ prefix are only available during build time
