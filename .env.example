# =================================
# ArtisanMarket Environment Variables Template
# =================================
# Copy this file to .env and update the values for your environment

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# =================================
# DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/artisanmarket

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_URL=redis://localhost:6379

# =================================
# JWT AUTHENTICATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# =================================
# PAYMENT PROCESSING (STRIPE)
# =================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =================================
# CLOUDINARY (Image Management)
# =================================
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# =================================
# EMAIL CONFIGURATION (SMTP)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@artisanmarket.com
FROM_NAME=ArtisanMarket

# =================================
# SOCKET.IO CONFIGURATION
# =================================
SOCKET_IO_ORIGINS=http://localhost:3000

# =================================
# FILE UPLOAD SETTINGS
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =================================
# SECURITY SETTINGS
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=http://localhost:3000,http://localhost:5172

# =================================
# CACHE SETTINGS
# =================================
CACHE_EXPIRE_PRODUCTS=600
CACHE_EXPIRE_CATEGORIES=3600
CACHE_EXPIRE_VENDORS=1800

# =================================
# SEARCH CONFIGURATION (Optional)
# =================================
ELASTICSEARCH_URL=http://localhost:9200

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =================================
# SOCIAL MEDIA INTEGRATION (Optional)
# =================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =================================
# ANALYTICS & MONITORING (Optional)
# =================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn_here

# =================================
# DEVELOPMENT SETTINGS
# =================================
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_SWAGGER_DOCS=true
